<view>
  <swiper indicator-dots="{{false}}" circular="true" indicator-color="rgba(23,23,23,.3)">
    <swiper-item>
      <image src="/images/1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/4.jpg"></image>
    </swiper-item>
  </swiper>
  <view wx:for="{{postkey}}" wx:for-item="item" wx:for-index="ids">
    <view class='posts-container'>
      <view class='post-author-title'>
        <image src='{{item.titleImage}}'></image>
        <text>{{item.author}}</text>
      </view>
      <text class='posts-title'>{{item.title}}{{ids}}</text>
      <image class='posts-image' src="{{item.image}}"></image>
      <text class='posts-content'>{{item.content}}
      </text>
      <view class='post-like'>
        <image src='/images/favorite.png'></image>
        <text>{{item.favourite}}</text>
        <image src='/images/comments.png'></image>
        <text>{{item.comments}}</text>
      </view>
    </view>
  </view>
</view>